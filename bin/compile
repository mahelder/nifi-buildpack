#!/usr/bin/env bash
# Usage:
#
#     $ bin/compile <build-dir> <env-path>

# Fail fast and fail hard.
set -eo pipefail

BUILD_DIR=$1
ENV_DIR=$2
BIN_DIR=$(cd "$(dirname "$0")"; pwd) # absolute path

NIFI_URL="http://ftp.unicamp.br/pub/apache/nifi/1.10.0/nifi-1.10.0-bin.tar.gz"
NIFI_DIR="apache/nifi"
NIFI_FILENAME="nifi"

source "$BIN_DIR/utils"

puts-step "Found an nifi.txt"

indent "Making directory ${BUILD_DIR}/${NIFI_DIR}"
mkdir -p ${BUILD_DIR}/${NIFI_DIR}

indent "Downloading and extracting ${NIFI_FILENAME}"
curl ${NIFI_URL} -L -s -o - | tar -xz -C \
	${BUILD_DIR}/${NIFI_DIR} -f -

if [[ $? != 0 ]]; then
  indent "Failure while downloading Nifi archive"
  exit 1
fi

indent "Successfully extracted ${NIFI_FILENAME}"

indent "Configuring Nifi"
sed -i '137s/.*/nifi.web.http.port='"$PORT"'/' ${BUILD_DIR}/${NIFI_DIR}/nifi-1.10.0/conf/nifi.properties

NIFI_HOME="${BUILD_DIR}/${NIFI_DIR}/nifi-1.10.0"

PKG_CONFIG_PATH=${NIFI_HOME}

indent "Create profile.d script"
mkdir -p ${BUILD_DIR}/.profile.d

NIFI_HOME="${HOME}/${NIFI_DIR}/nifi-1.10.0"

cp $BIN_DIR/post-deploy.py $NIFI_HOME/post-deploy.py

cat <<EOF > ${BUILD_DIR}/.profile.d/nifi.sh
  export NIFI_HOME=${NIFI_HOME}  
EOF

source ${BUILD_DIR}/.profile.d/nifi.sh

indent "Save build NIFI_HOME to ENV_DIR"
NIFI_PATH="$ENV_DIR/NIFI_HOME"
echo $NIFI_HOME >> $NIFI_PATH

indent "Done!"